@model CheckoutIndexVM

<div class="cart-table-area section-padding-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="checkout_details_area mt-50 clearfix">

                    <div class="cart-title">
                        <h2>Checkout</h2>
                    </div>

                    <form action="#" method="post" asp-controller="Checkout">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <input asp-for="Checkouts.FirstOrDefault().FirsName" type="text" placeholder="First Name" required="required" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <input asp-for="Checkouts.FirstOrDefault().LastName" type="text" placeholder="Last Name" required="required" />
                            </div>
                            <div class="col-12 mb-3">
                                <input  asp-for="Checkouts.FirstOrDefault().CompanyName" type="text" class="form-control" id="company" placeholder="Company Name" value="">
                            </div>
                            <div class="col-12 mb-3">
                                <input asp-for="Checkouts.FirstOrDefault().Email" type="email" class="form-control" id="email" placeholder="Email" value="">
                            </div>
                           
                            <div class="col-12 mb-3">
                                <input asp-for="Checkouts.FirstOrDefault().Adress" type="text" class="form-control mb-3" id="street_address" placeholder="Address" value="">
                            </div>
                            <div class="col-12 mb-3">
                                <input asp-for="Checkouts.FirstOrDefault().City" type="text" class="form-control" id="city" placeholder="Town" value="">
                            </div>
                            <div class="col-md-6 mb-3">
                                <input asp-for="Checkouts.FirstOrDefault().ZipCode"  type="text" class="form-control" id="zipCode" placeholder="Zip Code" value="">
                            </div>
                            <div class="col-md-6 mb-3">
                                <input asp-for="Checkouts.FirstOrDefault().PhoneNum" type="number" class="form-control" id="phone_number" min="0" placeholder="Phone No" value="">
                            </div>
                            <div class="col-12 mb-3">
                                <textarea asp-for="Checkouts.FirstOrDefault().Description" name="comment" class="form-control w-100" id="comment" cols="30" rows="10" placeholder="Leave a comment about your order"></textarea>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <div class="cart-summary">
                    <h5>Cart Total</h5>
                    <ul class="summary-table">
                        <li><span>delivery:</span> <span>Free</span></li>
                        <li><span>total:</span> <span> @(Model.Products.FirstOrDefault()?.Price * @Model.BasketItems.Select(a => a.Count).Sum())</span></li>
                    </ul>

                  

                    <div class="cart-btn mt-100">
                        <a href="#" class="btn amado-btn w-100">Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>