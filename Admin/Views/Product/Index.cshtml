@model ProductIndexVM

<!-- Product Details Area Start -->
<div class="single-product-area section-padding-100 clearfix">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mt-50">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Furniture</a></li>
                        <li class="breadcrumb-item"><a href="#">Chairs</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            white modern chair
                        </li>
                    </ol>
                </nav>
            </div>
        </div>

        @foreach (var product in Model.products)
        {

            <div class="row">
                <div class="col-12 col-lg-7">
                    <div class="single_product_thumb">
                        <div id="product_details_slider" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li class="active" data-target="#product_details_slider" data-slide-to="0" style="background-image: url(@Url.Content("~/productimg/" + product.ProductImages.FirstOrDefault(p=>p.IsMain)?.ImageName));"></li>

                                <li data-target="#product_details_slider" data-slide-to="1" style="background-image: url(@Url.Content("~/productimg/" + product.ProductImages.FirstOrDefault(p=>p.IsHover)?.ImageName));"></li>

                                <li data-target="#product_details_slider" data-slide-to="2" style="background-image:url(@Url.Content("~/productimg/" + product.ProductImages.Skip(2).FirstOrDefault()?.ImageName));"></li>

                                <li data-target="#product_details_slider" data-slide-to="3" style="background-image: url(@Url.Content("~/productimg/" + product.ProductImages.Skip(3).FirstOrDefault()?.ImageName));"></li>


                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item">
                                    <a class="gallery_img" href="~/productimg/@product.ProductImages.FirstOrDefault(x=>x.IsMain)?.ImageName">

                                        <img class="d-block w-100" src="~/productimg/@product.ProductImages.FirstOrDefault(x=>x.IsMain)?.ImageName" alt="First slide">
                                    </a>
                                </div>
                                <div class="carousel-item">
                                    <a class="gallery_img" href="~/productimg/@product.ProductImages.FirstOrDefault(x=> x.IsHover)?.ImageName">
                                        <img class="d-block w-100" src="~/productimg/@product.ProductImages.FirstOrDefault(p=>p.IsHover)?.ImageName" alt="Second slide">
                                    </a>
                                </div>
                                <div class="carousel-item">
                                    <a class="gallery_img" href="~/productimg/@product.ProductImages.Skip(2).FirstOrDefault()?.ImageName">
                                        <img class="d-block w-100" src="~/productimg/@product.ProductImages.Skip(2).FirstOrDefault()?.ImageName" alt="Third slide">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-5">
                <div class="single_product_desc">
                    <!-- Product Meta Data -->
                    <div class="product-meta-data">
                        <div class="line"></div>
                        <p class="product-price">$@product.Price</p>
                        <a asp-controller="Product" asp-action="Index">
                            <h6>@product.Name</h6>
                        </a>
                        <!-- Ratings & Review -->
                        <div class="ratings-review mb-15 d-flex align-items-center justify-content-between">
                            <div class="ratings">
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                            </div>
                            <div class="review">
                                <a href="#">Write A Review</a>
                            </div>
                        </div>
                        <!-- Avaiable -->
                        <p class="avaibility">
                            <i class="fa fa-circle"></i> In Stock
                        </p>
                    </div>

                    <div class="short_overview my-5">
                        <p>
                            @product.Description
                        </p>
                    </div>

                    <!-- Add to Cart Form -->
                    <form class="cart clearfix" method="post">
                        <div class="cart-btn d-flex mb-50">
                            <p>Qty</p>
                            <div class="quantity">
                                <span class="qty-minus"
                                      onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty ) &amp;&amp; qty &gt; 1 ) effect.value--;return false;">
                                    <i class="fa fa-caret-down" aria-hidden="true"></i>
                                </span>
                                <input type="number"
                                       class="qty-text"
                                       id="qty"
                                       step="1"
                                       min="1"
                                       max="300"
                                       name="quantity"
                                       value="1" />
                                <span class="qty-plus"
                                      onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty )) effect.value++;return false;">
                                    <i class="fa fa-caret-up" aria-hidden="true"></i>
                                </span>
                            </div>
                        </div>
                        <a asp-controller="Cart" asp-action="AddTobasket" asp-route-id="@product.Id" type="submit"
                           name="addtocart"
                           value="5"
                           class="btn amado-btn">
                            Add to cart
                        </a>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
<!-- Product Details Area End -->